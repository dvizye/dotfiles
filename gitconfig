[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    ctags = !.git/hooks/ctags
[init]
    templatedir = ~/.git_template
[diff]
    tool = vimdiff
[push]
    default = matching
[core]
    editor = vim
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
